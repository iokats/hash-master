<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ykatsatos.hashmaster.HashMasterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Load File" onAction="#onLoadFileButtonClick"/>
    <Label text="SHA-512 Hash:"/>
    <!-- Use TextArea for easy copying of long strings -->
    <TextArea fx:id="hashResultArea" editable="false" wrapText="true" prefHeight="100"/>
</VBox>
